<UserControl xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="SpectrumEngine.Client.Avalonia.Views.EmulatorView"
		xmlns:vm="using:SpectrumEngine.Client.Avalonia.ViewModels"
		xmlns:controls="using:SpectrumEngine.Client.Avalonia.Controls"
		mc:Ignorable="d"
		d:DesignWidth="800" d:DesignHeight="600">

	<Design.DataContext>
		<vm:EmulatorViewViewModel />
	</Design.DataContext>

	<Grid>
		<controls:SpectrumDisplayControl Focusable="True"
										 MachineController="{Binding Machine}"
										 KeyboardProviderManager="{Binding KeyboardProvider}" />
	</Grid>
	
</UserControl>