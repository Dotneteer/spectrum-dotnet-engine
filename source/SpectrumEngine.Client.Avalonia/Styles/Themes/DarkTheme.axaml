<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SpectrumEngine.Client.Avalonia.Styles.DarkTheme">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <Color x:Key="DarkGray">#202020</Color>
        <Color x:Key="MenuGray">#303030</Color>
        <Color x:Key="TextGray">#c0c0c0</Color>
        <Color x:Key="ToolbarGray">#383838</Color>
        <Color x:Key="IconButtonPointedColor">#80808080</Color>
        <Color x:Key="IconButtonDisabledColor">#a0a0a0</Color>
        <Color x:Key="IconButtonSeparatorColor">#808080</Color>
        
        <SolidColorBrush x:Key="AppBackground" Color="{DynamicResource DarkGray}"/>
        <SolidColorBrush x:Key="MenuText" Color="{DynamicResource TextGray}"/>
        <SolidColorBrush x:Key="MenuBackground" Color="{DynamicResource MenuGray}"/>
        <SolidColorBrush x:Key="ToolbarBackground" Color="{DynamicResource ToolbarGray}"/>
        <SolidColorBrush x:Key="IconButtonPointedBrush" Color="{DynamicResource IconButtonPointedColor}"/>
        <SolidColorBrush x:Key="IconButtonDisabledBrush" Color="{DynamicResource IconButtonDisabledColor}"/>
        <SolidColorBrush x:Key="IconButtonSeparatorBrush" Color="{DynamicResource IconButtonSeparatorColor}"/>

    </Styles.Resources>
</Styles>
