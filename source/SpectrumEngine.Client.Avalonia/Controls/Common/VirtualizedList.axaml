<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="clr-namespace:SpectrumEngine.Client.Avalonia.Controls.Common"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="SpectrumEngine.Client.Avalonia.Controls.Common.VirtualizedList"
    x:Name="UserControl">
    <ScrollViewer
        x:Name="Scroller"
        Focusable="True"
        EffectiveViewportChanged="OnEffectiveViewportChanged"
        ScrollChanged="OnScrollPositionChanged">
        <common:VirtualPanel
            x:Name="VirtualPanel"
            Items="{Binding ElementName=UserControl, Path=Items }"
            ItemHeight="{Binding ElementName=UserControl, Path=ItemHeight }"
            ItemTemplate="{Binding ElementName=UserControl, Path=ItemTemplate}">
        </common:VirtualPanel>
    </ScrollViewer>
</UserControl>
