<!--
    This control represents a vertical separator between two IconButton instances
-->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SpectrumEngine.Client.Avalonia.Controls"
>
    <Design.PreviewWith>
        <controls:IconButtonSeparator Height="20" />
    </Design.PreviewWith>

    <Style Selector="controls|IconButtonSeparator">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border 
                    BorderBrush="{DynamicResource IconButtonSeparatorBrush}" 
                    BorderThickness="1" 
                    Width="2" 
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Left" 
                    Margin="8,2" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
